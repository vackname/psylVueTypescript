{
  "compilerOptions": {
    "incremental": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise"
    ],
    "noFallthroughCasesInSwitch": true,
    "target": "es5",
    "module": "es2015",
    "declaration": false,
    "removeComments": false,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "main.ts"
  ]
}